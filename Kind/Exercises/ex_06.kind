//Retorna o oposto de um inteiro
//neg_inte(false, 1) = +1
//neg_inte(true, 5) = -5
neg_inte(a: Inte): Inte
    case a{
        pos: case a.num{
             zero: Inte.pos(Pos.zero)
             succ: 
                 let nat_pos = pos_to_nat(a.num)
                 let neg = nat_to_neg(nat_pos)
                 Inte.neg(neg)
        }           
        neg: 
            let nat_neg = neg_to_nat(a.num)
            let pos = nat_to_pos(nat_neg)
            Inte.pos(pos)
    }
